{# templates/login.html.twig #}
{% extends 'base.html.twig' %}

{% block title %}Mon titre{% endblock %}

{% block body %}

<section class="card" id="login-section">
	<h1>Connexion</h1>
	<form method="post" action="{{ path('app_login') }}">
   		{{ form_start(form) }}
			<label for="{{ form.email.vars.id }}">Adresse</label>
		{{ form_widget(form.email) }}
			<label for="{{ form.password.vars.id }}">Mot de passe</label>
		{{ form_widget(form.password) }}
			<a href="#">Mot de passe oubli√© ?</a>
			<input type="submit" value="Se connecter">
			<span>Pas de compte ? <a href="#">S'inscrire</a></span>
		{{ form_end(form) }}
    </form>
</section>

{% endblock %}